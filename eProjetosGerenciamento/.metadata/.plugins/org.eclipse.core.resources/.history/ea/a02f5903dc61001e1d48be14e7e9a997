package curso.java.thread;

public class AulaThread {
	
	public static void main(String[] args) throws InterruptedException {
		for (int pos = 0 ; pos < 10; pos++) {
			
			/*Ele dá um tempo, no caso aqui é 1 segundo*/
			Thread.sleep(2000);
			/*Executar envio com tempo de parado ou determinado, executar a cada 10s ou 10minutos.*/
			System.out.println("Executando alto rotina, por exemplo, envio de e-mail");
			
		}
		
	}

}

package curso.java.thread;

public class AulaThread {
	
	public static void main(String[] args) {
		for (int pos = 0 ; pos < 10; pos++) {
			
			java.lang.Thread.sleep(pos);
			
			/*Executar envio com tempo de parado ou determinado, executar a cada 10s ou 10minutos.*/
			syso("Executando alto rotina, por exemplo, envio de e-mail");
			
		}
		
	}

}
